<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="example.bogdan.proiect_mds.LevelSelectActivity">

    <Button
        android:id="@+id/ButtonNivel1"
        android:layout_width="15mm"
        android:layout_height="15mm"
        android:text="Level1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/ButtonNivel2"
        android:layout_width="15mm"
        android:layout_height="15mm"
        android:text="Level2"
        app:layout_constraintLeft_toRightOf="@+id/ButtonNivel1"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/ButtonNivel3"
        android:layout_width="15mm"
        android:layout_height="15mm"
        android:text="Level3"
        app:layout_constraintLeft_toRightOf="@+id/ButtonNivel2"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/ButtonNivel4"
        android:layout_width="15mm"
        android:layout_height="15mm"
        android:text="Level4"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/ButtonNivel3"
        android:layout_marginLeft="-13dp" />

    <Button
        android:id="@+id/ButtonNivel5"
        android:layout_width="15mm"
        android:layout_height="15mm"
        android:text="Level5"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/ButtonNivel1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/ButtonNivel6"
        android:layout_width="15mm"
        android:layout_height="15mm"
        android:text="Level6"
        android:layout_marginTop="-7dp"
        app:layout_constraintTop_toBottomOf="@+id/ButtonNivel2"
        app:layout_constraintLeft_toRightOf="@+id/ButtonNivel5"
        android:layout_marginLeft="0dp" />

    <Button
        android:id="@+id/ButtonMainMenu"
        android:layout_width="20mm"
        android:layout_height="10mm"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>
